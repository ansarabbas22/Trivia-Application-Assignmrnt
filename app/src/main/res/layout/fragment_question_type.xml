<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvToolbarName"
                android:text="Question Type"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/selection_type"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:background="@drawable/spinner_background"
                android:layout_height="wrap_content">
                <Spinner
                    android:entries="@array/question_selection_type"
                    android:layout_width="match_parent"
                    android:id="@+id/spOptionType"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/selection_difficulty"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/spinner_background"
                android:layout_height="wrap_content">
                <Spinner
                    android:entries="@array/question_difficulty"
                    android:layout_width="match_parent"
                    android:id="@+id/spDifficulty"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnNext"
                android:text="@string/start_quiz"
                android:layout_gravity="end"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_background"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
      <LinearLayout
          android:id="@+id/llCloseDialog"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:padding="@dimen/_3sdp"
          android:background="@drawable/button_background"
          android:layout_height="wrap_content">
          <ImageView
              android:src="@drawable/ic_close"
              android:layout_alignParentRight="true"
              android:layout_width="@dimen/_16sdp"
              android:layout_height="@dimen/_16sdp"/>
      </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>